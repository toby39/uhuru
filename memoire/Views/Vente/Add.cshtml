@model memoire.Models.Vente

@{
   // Layout = "~/Views/Shared/_LayoutRevendeur.cshtml";
    ViewData["Title"] = "Nouvelle Vente";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acceuil</a></li>
        <li class="breadcrumb-item"><a asp-controller="vente" asp-action="">Vente</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nouvelle Vente</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form method="POST" asp-controller="vente" asp-action="add">

                    <div class="form-group col-md-6">
                        <label>paquet :</label>
                        <select name="paquet" asp-for="paquet" required class="form-control">
                            @foreach (var Tarif in ViewBag.Tarifs)
                            {
                                <option value="@Tarif.designation">@Tarif.description</option>
                            }
                        </select>
                    </div>


                    <div class="form-group col-md-6">
                        <label>Date :</label>
                        <input type="date" name="date" asp-for="date" required class="form-control">
                    </div>

                    <input type="hidden" name="Clientid" value="@ViewBag.Client" asp-for="Clientid" />

                    <div class="form-group col-md-6">
                        <input type="submit" class="btn btn-primary" value="Enregistrer">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
