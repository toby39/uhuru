@model memoire.Models.Approvisionement

@{
    //Layout = "~/Views/Shared/_LayoutAgent.cshtml";
    ViewData["Title"] = "Nouvelle Approvisonnemt";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Acceuil</a></li>
        <li class="breadcrumb-item"><a asp-controller="approvisionement" asp-action="">Approvisionement</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nouvelle Approvisionement</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form method="POST" asp-controller="approvisionement" asp-action="add">
                    <div class="form-group col-md-6">
                        <label>Quantité :</label>
                        <input type="number" name="quantite" asp-for="quantite" required class="form-control" placeholder="Entrez la Quantité">
                    </div>

                    <div class="form-group col-md-6">
                        <label>Unité :</label>
                        <select required class="form-control" asp-for="unite">
                            <option value="GB" selected>GB</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label>Date :</label>
                        <input type="date" name="date" asp-for="date" required class="form-control">
                    </div>

                    <input type="hidden" name="RevendeurId" value="@ViewBag.Revendeur" asp-for="Revendeurid" />

                    <div class="form-group col-md-6">
                        <input type="submit" class="btn btn-primary" value="Enregistrer">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
